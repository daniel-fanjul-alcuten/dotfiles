#!/bin/sh

# no bell
xset -b

# agents
gpg-agent --daemon --sh --write-env-file ~/.gnupg/gpg-agent-info-"$(hostname)"
if [ -f ~/.gnupg/gpg-agent-info-"$(hostname)" ]; then
  . ~/.gnupg/gpg-agent-info-"$(hostname)"
  export GPG_AGENT_INFO
  export SSH_AUTH_SOCK
fi

# gnome
gnome-power-manager &
gnome-screensaver &
gnome-settings-daemon &
gnome-volume-manager &
mail-notification &
nm-applet &

# set PATH
if [ -d ~/usr/local/bin ]; then
  PATH=~/usr/local/bin:"$PATH"
fi
if [ -d ~/bin/games ] ; then
  PATH=~/bin/games:"$PATH"
fi
if [ -d ~/bin ] ; then
  PATH=~/bin:"$PATH"
fi

# awesome
exec awesome
