#!/bin/bash

# quick
xset -b
xsetroot -bg black

# agents
gpg-connect-agent /bye
export SSH_AUTH_SOCK=~/.gnupg/S.gpg-agent.ssh

# gnome
gnome-terminal &
gnome-power-manager &
gnome-screensaver &
gnome-settings-daemon &
gnome-volume-manager &
gnome-control-center sound &
mail-notification &
nm-applet &

# set PATH
if [ -d ~/usr/local/bin ]; then
  PATH=~/usr/local/bin:"$PATH"
fi
if [ -d ~/bin/games ] ; then
  PATH=~/bin/games:"$PATH"
fi
if [ -d ~/bin ] ; then
  PATH=~/bin:"$PATH"
fi

# awesome
awesome
