# mutt
set realname='Daniel Fanjul'
set folder=~/var/mail
set mbox=~/var/mail/dfanjul
set record=~/var/mail/sent
set postponed=~/var/mail/postponed
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates
set move=yes
set delete=yes
set quit=yes
set confirmappend=no
set pgp_use_gpg_agent=yes
set crypt_autoencrypt=yes
set crypt_autosign=yes
auto_view text/html
bind index "\\n" next-unread-mailbox

# local
mailboxes /var/mail/dfanjul
mailboxes ~/var/mail/dfanjul
mailboxes ~/var/mail/sent
mailboxes ~/var/mail/postponed
folder-hook . "unset smtp_url"
folder-hook . "unset smtp_pass"
macro index "\\l" ":set folder=~/var/mail<Enter>"
macro compose "\\l" ":unset smtp_url<Enter>:unset smtp_pass<Enter>"

# imap
set imap_idle=yes
set imap_passive=no
set imap_check_subscribed=yes

# dfanjul
mailboxes 'imaps://daniel.fanjul.alcuten@gmail.com@imap.gmail.com:993/INBOX'
set my_daniel_fanjul_alcuten_gmail_com_pass=`gpg2 -qd ~/.mutt.gmail.pass.gpg`
account-hook daniel.fanjul.alcuten@gmail.com@imap.gmail.com "set imap_pass=$my_daniel_fanjul_alcuten_gmail_com_pass"
account-hook daniel.fanjul.alcuten@gmail.com@imap.gmail.com "set smtp_url=smtps://daniel.fanjul.alcuten@gmail.com@smtp.gmail.com:465"
account-hook daniel.fanjul.alcuten@gmail.com@imap.gmail.com "set smtp_pass=$my_daniel_fanjul_alcuten_gmail_com_pass"
macro index,pager "\\g" ":set folder=imaps://daniel.fanjul.alcuten@gmail.com@imap.gmail.com:993<Enter>"
macro compose "\\g" ":set smtp_url=smtps://daniel.fanjul.alcuten@gmail.com@smtp.gmail.com:465<Enter>:set smtp_pass=$my_daniel_fanjul_alcuten_gmail_com_pass<Enter>"

# gpg2
set pgp_decode_command="gpg2 --status-fd=2 %?p?--passphrase-fd 0? --no-verbose --quiet --batch --output - %f"
set pgp_verify_command="gpg2 --status-fd=2 --no-verbose --quiet --batch --output - --verify %s %f"
set pgp_decrypt_command="gpg2 --status-fd=2 %?p?--passphrase-fd 0? --no-verbose --quiet --batch --output - %f"
set pgp_sign_command="gpg2 --no-verbose --batch --quiet --output - %?p?--passphrase-fd 0? --armor --detach-sign --textmode %?a?-u %a? %f"
set pgp_clearsign_command="gpg2 --no-verbose --batch --quiet --output - %?p?--passphrase-fd 0? --armor --textmode --clearsign %?a?-u %a? %f"
set pgp_encrypt_only_command="/usr/lib/mutt/pgpewrap gpg2 --batch --quiet --no-verbose --output - --encrypt --textmode --armor --always-trust -- -r %r -- %f"
set pgp_encrypt_sign_command="/usr/lib/mutt/pgpewrap gpg2 %?p?--passphrase-fd 0? --batch --quiet --no-verbose --textmode --output - --encrypt --sign %?a?-u %a? --armor --always-trust -- -r %r -- %f"
set pgp_import_command="gpg2 --no-verbose --import %f"
set pgp_export_command="gpg2 --no-verbose --export --armor %r"
set pgp_verify_key_command="gpg2 --verbose --batch --fingerprint --check-sigs %r"
set pgp_list_pubring_command="gpg2 --no-verbose --batch --quiet --with-colons --with-fingerprint --with-fingerprint --list-keys %r"
set pgp_list_secring_command="gpg2 --no-verbose --batch --quiet --with-colons --with-fingerprint --with-fingerprint --list-secret-keys %r"
set pgp_good_sign="^\\[GNUPG:\\] GOODSIG"




