#!/bin/bash
set -e
set -x

dir=$(git rev-parse --git-dir)

if [ -f "$dir"/config.sh ]; then
  vi "$dir"/config.sh
elif [ -f "$dir"/config.sh.gpg ]; then
  gpg2 "$dir"/config.sh.gpg
  vi "$dir"/config.sh
else
  vi "$dir"/config.sh
fi

me=$(whoami)@$(hostname)
gpg2 --batch --yes -es -u "$me" -r "$me" "$dir"/config.sh
shred -uv "$dir"/config.sh
