#!/bin/bash

u=`tsp -m git-annex-fsck-files -u`
uu="-D $u"

c=`tsp -m $uu git-annex-fsck-files -c`
a=`tsp -m $uu git-annex-fsck-files -a`

if mountpoint -q /media/mdrive; then
	m=`tsp -m $uu git-annex-fsck-files -m`
fi

if mountpoint -q /media/wdrive; then
	w=`tsp -m $uu git-annex-fsck-files -w`
fi

if mountpoint -q /media/ldrive; then
	l=`tsp -m $uu git-annex-fsck-files -l`
fi

f=`tsp -m $uu git-annex-fsck-files -f`
