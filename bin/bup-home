#!/bin/bash
set -e
set -x

source ~/etc/backup.cfg

for name in "$@"; do

  mountpoint="/media/$name"
  if ! sudo mountpoint -q "$mountpoint"; then
    continue
  fi

  dir="$mountpoint"
  mkdir -m 0775 -p "$dir"

  dir="$mountpoint"/backups
  mkdir -m 0775 -p "$dir"

  dir="$dir"/$(hostname)
  mkdir -m 0775 -p "$dir"

  dir="$dir"/$(whoami)
  mkdir -m 0775 -p "$dir"

  export BUP_DIR="$dir"/bup
  bup init
  bup index -x $basic_excludes ~
  bup save -n "$(whoami)@$(hostname)" ~

  sudo s3qlctrl upload-meta "$mountpoint"

done
