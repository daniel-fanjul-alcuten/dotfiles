#!/bin/bash
set -e

suffix="$1" && shift || { echo suffix? ; exit 1; }

if [ -f ~/.gnupg/gpg-agent-info-"$(hostname)" ]; then
  . ~/.gnupg/gpg-agent-info-"$(hostname)"
  export GPG_AGENT_INFO
  export SSH_AUTH_SOCK
fi

dir1=~/etc/cron."$suffix"
dir2="$dir1"/$(hostname)
for dir in "$dir1" "$dir2"; do
  if [ -d "$dir" ]; then
    run-parts "$dir" "$@"
  fi
done
