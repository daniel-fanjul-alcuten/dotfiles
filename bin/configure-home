  pipebench \
  powertop \
  privbind \
  pv \
  pwgen \
  pydf \
  qdbm-util \
  qiv \
  reptyr \
  rpl \
  s3cmd \
  s3ql \
  saidar \
  shellcheck \
  simhash \
  smem \
  smplayer \
  sshfs \
  sshpass \
  stgit \
  subversion \
  taggrepper \
  tagtool \
  telnet-ssl \
  tidy \
  tig \
  timelimit \
  tinycdb \
  tmux \
  tor \
  totem \
  trend \
  trickle \
  ttyload \
  ttyrec \
  ucspi-proxy \
  ucspi-tcp \
  ucspi-unix \
  udpcast \
  unrar \
  unrtf \
  unzip \
  uptimed \
  uuid \
  vdmfec \
  w3m \
  wamerican \
  wbritish \
  wipe \
  wodim \
  wspanish \
  xclip \
  xdu \
  xsel \
  zip

sudo aptitude install \
  texlive-full \
  virtualbox

sudo aptitude upgrade

sudo apt autoremove

sudo aptitude clean
