  cfget \
  cfv \
  clusterssh \
  cmatrix \
  cmatrix-xfont \
  crawl \
  cwcp \
  dctrl-tools \
  debsums \
  dict \
  dict-freedict-eng-spa \
  dict-freedict-spa-eng \
  dict-jargon \
  dictd \
  disper \
  dstat \
  dvdisaster \
  e2fsprogs \
  evince \
  fbreader \
  flac \
  fonts-inconsolata \
  freecdb \
  gawk \
  genders \
  genisoimage \
  gimp \
  git-doc \
  git-flow \
  git-svn \
  git2cl \
  gitstats \
  gnupg \
  gource \
  graphviz \
  graphviz-doc \
  hardinfo \
  hgview \
  httpcode \
  id3 \
  id3ren \
  id3v2 \
  iftop \
  inotify-tools \
  ioping \
  irssi \
  ispanish \
  ispell \
  iwatch \
  lftp \
  libreoffice \
  links \
  lltag \
  loadwatch \
  lrzip \
  lsyncd \
  lynx \
  markdown \
  mbuffer \
  md5deep \
  mdadm \
  meld \
  mercurial-git \
  mlocate \
  mp3info \
  mp3splt \
  mpg321 \
  mtp-tools \
  mtpfs \
  netpipes \
  network-manager \
  network-manager-gnome \
  network-manager-vpnc \
  nilfs-tools \
  ntfs-3g \
  ntp \
  parted \
