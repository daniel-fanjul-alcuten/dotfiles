#!/bin/bash
set -e
set -x

source ~/etc/backup.cfg

for name in "$@"; do

  mountpoint="/media/$name"
  if ! sudo mountpoint -q "$mountpoint"; then
    continue
  fi

  dir="$mountpoint"
  sudo mkdir -m 0775 -p "$dir"

  dir="$mountpoint"/machines
  sudo mkdir -m 0775 -p "$dir"

  dir="$dir"/$(hostname)
  sudo mkdir -m 0775 -p "$dir"

  repo="$dir"/obnam
  sudo obnam --repository "$repo" backup --chunk-size=$((64*1024*1024)) $machine_excludes --one-file-system /
  sudo obnam --repository "$repo" forget --keep 72h,7d,5w,12m

  sudo s3qlctrl upload-meta "$mountpoint"

done
