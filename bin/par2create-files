#!/bin/bash
set -x
set -e
set -o pipefail

unset options
while [[ "$1" =~ -.* ]]; do
  options="$options $1"
  shift
done

common_prefix() {
  local n=0
  while [[ "${1:n:1}" == "${2:n:1}" ]]; do
    ((n++))
  done
  echo "${1:0:n}"
}

i=1
prefix="$1"
while [ $i -lt $# ]; do
  i=$((i+1))
  prefix=$(common_prefix "$prefix" "${!i}")
done
prefix=${prefix%.}

nice ionice -c 3 par2create $options "$prefix".par2 "$@"
