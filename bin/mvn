#!/bin/bash

MAVEN_IMAGE=${MAVEN_IMAGE:-maven:3.5-jdk-8-alpine}

docker run -it --rm \
  --network host \
  --user "$(id -u):$(id -g)" \
  -v ~/.m2/docker-settings.xml:/m2/settings.xml \
  -v ~/.m2/repository:/m2/repository \
  -v "$PWD":/src \
  -w /src \
  --entrypoint mvn \
  "$MAVEN_IMAGE" \
  -gs /m2/settings.xml "$@"
