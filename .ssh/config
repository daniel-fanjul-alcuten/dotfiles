# me
Host localhost
  ControlPersist yes
  ForwardAgent yes
  ForwardX11 yes
  RequestTTY auto

# github
Host github.com
  User git
  ControlPersist yes

# bitbucket.org
Host bitbucket.org
  User git
  ControlPersist yes

# globals
Host *
  ControlMaster auto
  ControlPath ~/.ssh/master-%r@%h:%p
  ControlPersist no
  ForwardAgent no
  ForwardX11 no
  RequestTTY auto
